<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Personales.Pages.MDatos"
             BackgroundColor="#0B243B"
             Padding="20">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">
            <Label Text="Hoja de Datos" TextColor="White" FontSize="Large"></Label>
            <ScrollView>
                <!--a label is created without text defined because it will be assigned a value with the values ​​that are stored in the variables of the local class-->
                <Label x:Name="dCompletos" Text="" TextColor="White"/>
            </ScrollView>
            <Button Text="Ingresar nuevo" TextColor="White" Clicked="pricipalPage" BackgroundColor="#0174DF" BorderColor="White" BorderRadius="15"></Button>
            <!--<Button Text="Finalizar" TextColor="White" Clicked="finish_OnClicked" BackgroundColor="#0174DF" BorderColor="White" BorderRadius="15"></Button>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>